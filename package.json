{
  "name": "raidenyn-home",
  "description": "My Home Page",
  "version": "0.0.0",
  "author": "Yuriy Nagaev <yuriy@nagaev.me>",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3",
    "yarn": ">=1.2"
  },
  "files": [
    "dist",
    "helpers",
    "src/types",
    "server.*.ts",
    "tsconfig.json",
    "yarn.lock"
  ],
  "scripts": {
    "build": "yarn run test && yarn run prod && yarn run package",
    "clean": "rimraf dist && rimraf coverage && rimraf dist.tgz",
    "package": "yarn pack --filename dist.tgz",
    "prod": "yarn run clean && run-p prod:client prod:sw prod:server",
    "prod:client": "cross-env NODE_ENV=production webpack --config config/webpack.config.prod.ts -p --progress --hide-modules",
    "prod:server": "cross-env NODE_ENV=production webpack --config config/webpack.config.server.ts --progress --hide-modules",
    "prod:sw": "cross-env NODE_ENV=production webpack --config config/webpack.config.sw.ts -p --progress --hide-modules",
    "prod:ssr": "cross-env NODE_ENV=production ts-node server.prod.ts",
    "coverage": "yarn run coverage:run && yarn run coverage:remap && yarn run coverage:open",
    "coverage:open": "opn coverage/html-ts/index.html",
    "coverage:remap": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html-ts -t html",
    "coverage:run": "cross-env NODE_ENV=development karma start karma.coverage.ts",
    "dev": "yarn run clean && run-p dev:ssr dev:client dev:sw dev:server",
    "dev:client": "webpack-dev-server -d --hot --config config/webpack.config.dev.ts",
    "dev:server": "webpack --watch --config config/webpack.config.server.ts",
    "dev:sw": "webpack --watch --config config/webpack.config.sw.ts",
    "dev:ssr": "nodemon --watch server.*.ts --exec ts-node server.dev.ts",
    "test": "cross-env NODE_ENV=development karma start karma.unit.ts",
    "test:debug": "cross-env NODE_ENV=development karma start karma.debug.ts",
    "test:watch": "cross-env NODE_ENV=development karma start karma.unit.ts --singleRun=false --auto-watch"
  },
